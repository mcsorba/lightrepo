<project name="xunit-example" xmlns:jacoco="antlib:org.jacoco.ant">
	<path id="classpath">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<taskdef uri="antlib:org.jacoco.ant" resource="org/jacoco/ant/antlib.xml" classpathref="classpath" />


	<target name="report" depends="coverage">
		<jacoco:report>
			<executiondata>
				<file file="jacoco.exec" />
			</executiondata>
			<structure name="JaCoCo Example">
				<classfiles>
					<fileset dir="build/classes" />
				</classfiles>
				<sourcefiles encoding="UTF-8">
					<fileset dir="src" />
				</sourcefiles>
			</structure>
			<xml destfile="reports-jacoco/report.xml" />
		</jacoco:report>
	</target>
</project>
